+				log_info ("** Ignoring requests on %s.  %s",
 					   tmp -> name, "If this is not what");
-				log_error ("   you want, please write %s",
+				log_info ("   you want, please write %s",
 #ifdef DHCPv6
 				           (local_family != AF_INET) ?
 					   "a subnet6 declaration" :
 #endif
 					   "a subnet declaration");
